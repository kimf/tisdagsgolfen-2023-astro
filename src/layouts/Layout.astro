---
import { pwaInfo } from 'virtual:pwa-info';
import { pwaAssetsHead } from 'virtual:pwa-assets/head';
import { Head } from 'astro-capo';
// import { AstroFont } from 'astro-font';
export interface Props {
  title: string;
}

const { title } = Astro.props;
import 'src/styles/globals.css';
---

<!doctype html>
<html lang="sv">
  <Head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <!-- <AstroFont
      config={[
        {
          name: "Micro5",
          src: [
            {
              style: 'bold',
              weight: '700',
              path: 'https://fonts.gstatic.com/s/afacad/v1/6NUK8FKMIQOGaw6wjYT7ZHG_zsBBfvLqagk-80KjZfJ_uw.woff2'
            },
          ],
          preload: true,
          display: "swap",
          selector: "body",
          fallback: "sans-serif",
        },
      ]}
    /> -->
    <title>{title || 'Tisdagsgolfen'}</title>
    {
      pwaAssetsHead.themeColor && (
        <meta name="theme-color" content={pwaAssetsHead.themeColor.content} />
      )
    }
    {pwaAssetsHead.links.map((link: any) => <link {...link} />)}
    {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
  </Head>
  <body>
    <header>
      <h1>
        <a href="/">Tisdagsgolfen 2025</a>
      </h1>
      <slot name="header" />
    </header>
    <section id="main">
      <slot />
    </section>
  </body>
</html>
