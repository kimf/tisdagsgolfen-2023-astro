---
import { eq } from 'drizzle-orm';
import { db } from '../db';
import scoringSessions from '../db/schema/session';
import { ScoringCard } from './ScoringCard';
import ShowNewSession from './ShowNewSession';

const userId = Astro.cookies.get('activeUserId');

const activeSessions = userId
  ? await db
      .select()
      .from(scoringSessions)
      .where(eq(scoringSessions.ownerId, userId.value))
      .limit(1)
  : [];

const activeSession = activeSessions[0];
---

{
  !userId && (
    <div class="flex justify-center items-center h-32">
      <a href="/login" class="button">
        LOGGA IN
      </a>
    </div>
  )
}

{activeSession && <ScoringCard client:load sessionId={activeSession.id} />}

{userId && !activeSession && <ShowNewSession client:load />}

<style>
  .scoring-card {
    max-width: 100%;
    overflow-x: auto;
  }

  .connection-status {
    margin-bottom: 1rem;
  }

  .connected {
    color: green;
  }

  .disconnected {
    color: orange;
  }

  .hole-navigation {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 1rem 0;
  }

  .scoring-table {
    width: 100%;
    border-collapse: collapse;
  }

  .scoring-table th,
  .scoring-table td {
    padding: 0.5rem;
    text-align: center;
    border: 1px solid #ddd;
  }

  .score-controls {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
  }

  .score-controls button {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    border: 1px solid #ccc;
    background-color: #f5f5f5;
    cursor: pointer;
  }
</style>
