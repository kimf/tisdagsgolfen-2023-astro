---
import { Image } from 'astro:assets';
export interface Props {
  seed: string;
  size?: 'small' | 'smallmedium' | 'medium' | 'large' | 'xlarge';
  alignSelf?: 'flex-start' | 'center' | 'flex-end';
  uri: string | null;
  loading?: boolean;
}

const { size, alignSelf, seed, uri } = Astro.props;

const sizes = {
  small: 24,
  smallmedium: 30,
  medium: 36,
  large: 48,
  xlarge: 64,
};

const borderRadius = {
  small: 2,
  smallmedium: 2,
  medium: 4,
  large: 6,
  xlarge: 10,
};

const imageUri =
  uri || `https://api.dicebear.com/7.x/pixel-art/png?seed=${seed}&backgroundColor=3290FC`;

const width = sizes[size || 'medium'];
const height = sizes[size || 'medium'];
---

<Image src={imageUri} alt="Avatar" height={height} width={width} />
